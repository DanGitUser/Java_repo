package lesson;

public class lesson05_10 {
	public static void main(String[] args) {
		
		int sum = 0;
		
		for (int i = 1; i < 12; i ++) {
		//if(i % 3 == 0) {
        if(12 % i == 0) {

			sum += i;
			System.out.printf("i : %3d\n", i);
		  //System.out.printf("i : %3d, sum : %4d\n", i , sum);
		}		
		System.out.println(sum);
		}
	}
}
